---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n/index.js';

const lang = 'eu';
const whatsappUrl = 'https://wa.me/34632759513?text=' + encodeURIComponent('¡Hola! Me gustaría obtener más información sobre sus productos.');
---

<Layout title="Contacto - Mugixor" description="Ponte en contacto con nosotros. Estamos aquí para ayudarte con cualquier pregunta sobre nuestros productos de movilidad sostenible." lang={lang}>
  <section class="section">
    <div class="container">
      <div class="contact-hero">
        <h1 class="contact-title">{t(lang, 'contact.title')}</h1>
        <h2 class="contact-subtitle">{t(lang, 'contact.subtitle')}</h2>
        <p class="contact-description">{t(lang, 'contact.description')}</p>
      </div>
      
      <div class="contact-methods">
        <div class="method-card whatsapp-card">
          <div class="method-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
          </div>
          <h3 class="method-title">{t(lang, 'contact.whatsapp_title')}</h3>
          <p class="method-description">{t(lang, 'contact.whatsapp_desc')}</p>
          <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="btn btn-whatsapp btn-lg">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
            {t(lang, 'buttons.start_chat')}
          </a>
        </div>
        
        <div class="method-card email-card">
          <div class="method-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
          </div>
          <h3 class="method-title">{t(lang, 'contact.email_title')}</h3>
          <p class="method-description">{t(lang, 'contact.email_desc')}</p>
          <a href="mailto:info@mugixor.eus" class="btn btn-primary btn-lg">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            {t(lang, 'buttons.send_email')}
          </a>
          <div class="email-address">
            <strong>info@mugixor.eus</strong>
          </div>
        </div>
      </div>
      
      <div class="additional-info">
        <div class="info-card">
          <h3>Horario de Atención</h3>
          <p>
            <strong>Lunes a Viernes:</strong> 9:00 - 18:00<br>
            <strong>Sábados:</strong> 10:00 - 14:00<br>
            <strong>Domingos:</strong> Cerrado
          </p>
        </div>
        
        <div class="info-card">
          <h3>Tiempo de Respuesta</h3>
          <p>
            <strong>WhatsApp:</strong> Respuesta inmediata durante horario laboral<br>
            <strong>Email:</strong> Máximo 24 horas laborables<br>
            <strong>Consultas técnicas:</strong> 48 horas máximo
          </p>
        </div>
        
        <div class="info-card">
          <h3>Idiomas Disponibles</h3>
          <p>
            Ofrecemos atención en <strong>Español</strong>, <strong>Euskera</strong>, <strong>Francés</strong>, <strong>Inglés</strong>, <strong>Holandés</strong> y <strong>Alemán</strong>.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-hero {
    text-align: center;
    margin-bottom: 80px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .contact-title {
    font-size: 3rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 20px;
  }
  
  .contact-subtitle {
    font-size: 1.5rem;
    font-weight: 500;
    color: #10b981;
    margin-bottom: 24px;
  }
  
  .contact-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #4b5563;
  }
  
  .contact-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 40px;
    margin-bottom: 80px;
  }
  
  .method-card {
    background: white;
    padding: 50px 40px;
    border-radius: 20px;
    box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.3s ease;
  }
  
  .method-card:hover {
    transform: translateY(-8px);
  }
  
  .whatsapp-card {
    border: 2px solid #25d366;
  }
  
  .email-card {
    border: 2px solid #10b981;
  }
  
  .method-icon {
    color: #10b981;
    margin-bottom: 24px;
  }
  
  .whatsapp-card .method-icon {
    color: #25d366;
  }
  
  .method-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 16px;
  }
  
  .method-description {
    font-size: 1rem;
    line-height: 1.6;
    color: #6b7280;
    margin-bottom: 32px;
  }
  
  .btn-lg {
    padding: 16px 32px;
    font-size: 1.125rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }
  
  .email-address {
    margin-top: 16px;
    font-size: 1.125rem;
    color: #374151;
  }
  
  .additional-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }
  
  .info-card {
    background: #f9fafb;
    padding: 30px;
    border-radius: 16px;
    border-left: 4px solid #10b981;
  }
  
  .info-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 16px;
  }
  
  .info-card p {
    color: #4b5563;
    line-height: 1.6;
  }
  
  .info-card strong {
    color: #1f2937;
  }
  
  @media (max-width: 768px) {
    .contact-hero {
      margin-bottom: 60px;
    }
    
    .contact-title {
      font-size: 2.5rem;
    }
    
    .contact-subtitle {
      font-size: 1.25rem;
    }
    
    .contact-methods {
      grid-template-columns: 1fr;
      gap: 30px;
      margin-bottom: 60px;
    }
    
    .method-card {
      padding: 40px 30px;
    }
    
    .additional-info {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    
    .info-card {
      padding: 24px;
    }
  }
</style>

