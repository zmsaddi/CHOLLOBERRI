---
import Layout from '../../layouts/Layout.astro';
import ProductCard from '../../components/ProductCard.astro';
import { t } from '../../i18n/index.js';

// Import products
import product1 from '../../content/products/product-1.json';
import product2 from '../../content/products/product-2.json';
import product3 from '../../content/products/product-3.json';
import product4 from '../../content/products/product-4.json';

const lang = 'de';
const products = [product1, product2, product3, product4];
const featuredProducts = products.filter(p => p.featured);
---

<Layout title="Mugixor - Liderando el Futuro de la Movilidad Sostenible" description="Descubre productos innovadores para un futuro m√°s sostenible. Bicicletas el√©ctricas, patinetes y m√°s." lang={lang}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">{t(lang, 'home.hero_title')}</h1>
        <p class="hero-subtitle">{t(lang, 'home.hero_subtitle')}</p>
        <p class="hero-description">{t(lang, 'home.hero_description')}</p>
        <div class="hero-actions">
          <a href="/de/productos/" class="btn btn-primary btn-lg">
            {t(lang, 'buttons.browse_products')}
          </a>
          <a href="/de/sobre-nosotros/" class="btn btn-secondary btn-lg">
            {t(lang, 'nav.about')}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Products Section -->
  <section class="section">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">{t(lang, 'home.featured_products')}</h2>
        <p class="text-lg text-gray-600">Descubre nuestros productos m√°s populares</p>
      </div>
      
      <div class="grid grid-3">
        {featuredProducts.map(product => (
          <ProductCard product={product} lang={lang} />
        ))}
      </div>
      
      <div class="text-center mt-8">
        <a href="/de/productos/" class="btn btn-primary">
          {t(lang, 'buttons.browse_products')}
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="section-sm" style="background-color: #f9fafb;">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">{t(lang, 'home.why_choose_us')}</h2>
      </div>
      
      <div class="grid grid-3">
        <div class="feature-card">
          <div class="feature-icon">üå±</div>
          <h3 class="feature-title">{t(lang, 'home.sustainability')}</h3>
          <p class="feature-description">{t(lang, 'home.sustainability_desc')}</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">‚≠ê</div>
          <h3 class="feature-title">{t(lang, 'home.quality')}</h3>
          <p class="feature-description">{t(lang, 'home.quality_desc')}</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">üöÄ</div>
          <h3 class="feature-title">{t(lang, 'home.innovation')}</h3>
          <p class="feature-description">{t(lang, 'home.innovation_desc')}</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    padding: 120px 0;
    text-align: center;
  }
  
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .hero-subtitle {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }
  
  .hero-description {
    font-size: 1.125rem;
    margin-bottom: 2.5rem;
    opacity: 0.8;
    line-height: 1.6;
  }
  
  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn-lg {
    padding: 16px 32px;
    font-size: 1.125rem;
  }
  
  .feature-card {
    text-align: center;
    padding: 2rem;
  }
  
  .feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #1f2937;
  }
  
  .feature-description {
    color: #6b7280;
    line-height: 1.6;
  }
  
  @media (max-width: 768px) {
    .hero {
      padding: 80px 0;
    }
    
    .hero-title {
      font-size: 2.5rem;
    }
    
    .hero-subtitle {
      font-size: 1.25rem;
    }
    
    .hero-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .btn-lg {
      width: 100%;
      max-width: 300px;
    }
  }
</style>

