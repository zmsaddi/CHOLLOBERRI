---
import Layout from '../../../layouts/Layout.astro';
import ProductCard from '../../../components/ProductCard.astro';
import ProductFilter from '../../../components/ProductFilter.astro';
import { t } from '../../../i18n/index.js';

// Import products
import product1 from '../../../content/products/product-1.json';
import product2 from '../../../content/products/product-2.json';
import product3 from '../../../content/products/product-3.json';
import product4 from '../../../content/products/product-4.json';

const lang = 'es';
const products = [product1, product2, product3, product4];
---

<Layout title="Productos - Mugixor" description="Explora nuestra selecciÃ³n completa de productos innovadores para movilidad sostenible." lang={lang}>
  <section class="section">
    <div class="container">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-4">{t(lang, 'products.title')}</h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          {t(lang, 'products.description')}
        </p>
      </div>
      
      <!-- Product Filter -->
      <ProductFilter lang={lang} />
      
      <div class="grid grid-3">
        {products.map(product => (
          <ProductCard product={product} lang={lang} />
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .max-w-2xl {
    max-width: 42rem;
  }
  
  .mx-auto {
    margin-left: auto;
    margin-right: auto;
  }
</style>

