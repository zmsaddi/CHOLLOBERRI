---
import Layout from '../../../layouts/Layout.astro';
import ProductGallery from '../../../components/ProductGallery.astro';
import { t } from '../../../i18n/index.js';

// Import products
import product1 from '../../../content/products/product-1.json';
import product2 from '../../../content/products/product-2.json';
import product3 from '../../../content/products/product-3.json';
import product4 from '../../../content/products/product-4.json';

export async function getStaticPaths() {
  const products = [product1, product2, product3, product4];
  
  return products.map(product => ({
    params: { slug: product.slug },
    props: { product }
  }));
}

const { product } = Astro.props;
const lang = 'es';
const productData = product[lang] || product.es;

function generateWhatsAppMessage(productName: string, lang: string) {
  const messages = {
    es: `Hola! Me interesa el producto: ${productName}. ¿Podrían darme más información y el precio final?`,
    eu: `Kaixo! ${productName} produktuarekin interesatuta nago. Informazio gehiago eta azken prezioa eman dezakezue?`,
    fr: `Bonjour! Je suis intéressé par le produit: ${productName}. Pourriez-vous me donner plus d'informations et le prix final?`,
    en: `Hello! I'm interested in the product: ${productName}. Could you give me more information and the final price?`,
    nl: `Hallo! Ik ben geïnteresseerd in het product: ${productName}. Kunt u mij meer informatie en de definitieve prijs geven?`,
    de: `Hallo! Ich interessiere mich für das Produkt: ${productName}. Könnten Sie mir weitere Informationen und den Endpreis geben?`
  };
  
  return encodeURIComponent(messages[lang] || messages.es);
}

const whatsappMessage = generateWhatsAppMessage(productData.name, lang);
const whatsappUrl = `https://wa.me/34632759513?text=${whatsappMessage}`;
---

<Layout title={`${productData.name} - Mugixor`} description={productData.description.substring(0, 160)} lang={lang}>
  <section class="section">
    <div class="container">
      <!-- Breadcrumb -->
      <nav class="breadcrumb mb-8">
        <a href={`/${lang}/`}>{t(lang, 'nav.home')}</a>
        <span class="separator">›</span>
        <a href={`/${lang}/productos/`}>{t(lang, 'nav.products')}</a>
        <span class="separator">›</span>
        <span class="current">{productData.name}</span>
      </nav>
      
      <div class="product-detail">
        <div class="product-gallery">
          <ProductGallery images={product.images} productName={productData.name} />
          {product.featured && (
            <span class="featured-badge">Destacado</span>
          )}
        </div>
        
        <div class="product-info">
          <h1 class="product-title">{productData.name}</h1>
          
          <div class="product-price">
            <span class="price">{product.price}{product.currency}</span>
          </div>
          
          <div class="product-description">
            <p>{productData.description}</p>
          </div>
          
          {productData.features && (
            <div class="product-features">
              <h3>Características principales:</h3>
              <ul>
                {productData.features.map(feature => (
                  <li>{feature}</li>
                ))}
              </ul>
            </div>
          )}
          
          <div class="product-actions">
            <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="btn btn-whatsapp btn-lg">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
              {t(lang, 'buttons.order_whatsapp')}
            </a>
            
            <a href={`/${lang}/productos/`} class="btn btn-secondary">
              ← Volver a productos
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.875rem;
    color: #6b7280;
  }
  
  .breadcrumb a {
    color: #10b981;
    text-decoration: none;
  }
  
  .breadcrumb a:hover {
    text-decoration: underline;
  }
  
  .separator {
    color: #d1d5db;
  }
  
  .current {
    color: #374151;
    font-weight: 500;
  }
  
  .product-detail {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }
  
  .product-gallery {
    position: sticky;
    top: 100px;
  }
  
  .featured-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: white;
    padding: 8px 16px;
    border-radius: 25px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 10;
  }
  
  .product-info {
    padding: 20px 0;
  }
  
  .product-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 20px;
    line-height: 1.2;
  }
  
  .product-price {
    margin-bottom: 30px;
  }
  
  .price {
    font-size: 2.5rem;
    font-weight: 700;
    color: #10b981;
  }
  
  .product-description {
    margin-bottom: 40px;
  }
  
  .product-description p {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #374151;
  }
  
  .product-features {
    margin-bottom: 40px;
  }
  
  .product-features h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 16px;
  }
  
  .product-features ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .product-features li {
    padding: 8px 0;
    padding-left: 24px;
    position: relative;
    color: #374151;
  }
  
  .product-features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: #10b981;
    font-weight: bold;
  }
  
  .product-actions {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }
  
  .btn-lg {
    padding: 16px 32px;
    font-size: 1.125rem;
    font-weight: 600;
  }
  
  @media (max-width: 768px) {
    .product-detail {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .product-gallery {
      position: static;
    }
    
    .product-title {
      font-size: 2rem;
    }
    
    .price {
      font-size: 2rem;
    }
    
    .product-actions {
      flex-direction: column;
    }
    
    .btn-lg {
      width: 100%;
      text-align: center;
    }
    
    .featured-badge {
      top: 10px;
      right: 10px;
      padding: 6px 12px;
      font-size: 0.75rem;
    }
  }
</style>

