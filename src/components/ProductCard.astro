---
import { t } from '../i18n/index.js';

export interface Props {
  product: any;
  lang: string;
}

const { product, lang } = Astro.props;
const productData = product[lang] || product.es;

function generateWhatsAppMessage(productName: string, lang: string) {
  const messages = {
    es: `Hola! Me interesa el producto: ${productName}. ¿Podrían darme más información?`,
    eu: `Kaixo! ${productName} produktuarekin interesatuta nago. Informazio gehiago eman dezakezue?`,
    fr: `Bonjour! Je suis intéressé par le produit: ${productName}. Pourriez-vous me donner plus d'informations?`,
    en: `Hello! I'm interested in the product: ${productName}. Could you give me more information?`,
    nl: `Hallo! Ik ben geïnteresseerd in het product: ${productName}. Kunt u mij meer informatie geven?`,
    de: `Hallo! Ich interessiere mich für das Produkt: ${productName}. Könnten Sie mir weitere Informationen geben?`
  };
  
  return encodeURIComponent(messages[lang] || messages.es);
}

const whatsappMessage = generateWhatsAppMessage(productData.name, lang);
const whatsappUrl = `https://wa.me/34632759513?text=${whatsappMessage}`;
---

<div class="product-card">
  <div class="product-image">
    <img src={product.images[0]} alt={productData.name} loading="lazy" />
    {product.featured && (
      <span class="featured-badge">
        {lang === 'es' && 'Destacado'}
        {lang === 'eu' && 'Nabarmendua'}
        {lang === 'fr' && 'En vedette'}
        {lang === 'en' && 'Featured'}
        {lang === 'nl' && 'Uitgelicht'}
        {lang === 'de' && 'Empfohlen'}
      </span>
    )}
  </div>
  
  <div class="product-info">
    <h3 class="product-name">{productData.name}</h3>
    <p class="product-description">{productData.description.substring(0, 120)}...</p>
    
    <div class="product-price">
      <span class="price">{product.price}{product.currency}</span>
    </div>
    
    <div class="product-actions">
      <a href={`/${lang}/productos/${product.slug}/`} class="btn btn-secondary">
        {t(lang, 'buttons.view_details')}
      </a>
      <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="btn btn-whatsapp">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
        </svg>
        {t(lang, 'buttons.order_whatsapp')}
      </a>
    </div>
  </div>
</div>

<style>
  .product-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }
  
  .product-image {
    position: relative;
    height: 240px;
    overflow: hidden;
  }
  
  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .product-card:hover .product-image img {
    transform: scale(1.05);
  }
  
  .featured-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .product-info {
    padding: 24px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .product-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 12px;
    line-height: 1.4;
  }
  
  .product-description {
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 16px;
    flex: 1;
  }
  
  .product-price {
    margin-bottom: 20px;
  }
  
  .price {
    font-size: 1.5rem;
    font-weight: 700;
    color: #10b981;
  }
  
  .product-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }
  
  .product-actions .btn {
    flex: 1;
    min-width: 120px;
    text-align: center;
    font-size: 0.875rem;
    padding: 10px 16px;
  }
  
  .btn-whatsapp svg {
    flex-shrink: 0;
  }
  
  @media (max-width: 768px) {
    .product-image {
      height: 200px;
    }
    
    .product-info {
      padding: 20px;
    }
    
    .product-actions {
      flex-direction: column;
    }
    
    .product-actions .btn {
      flex: none;
    }
  }
</style>

