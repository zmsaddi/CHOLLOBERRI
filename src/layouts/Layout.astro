    },
    {
      "@type": "Country",
      "name": "Switzerland"
    }
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+34632759513",
    "contactType": "customer service",
    "availableLanguage": ["Spanish", "Basque", "French", "English", "Dutch", "German"]
  },
  "sameAs": [
    "https://wa.me/34632759513"
  ]
