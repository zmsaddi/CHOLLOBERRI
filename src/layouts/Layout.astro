---
export interface Props {
  title: string;
  description?: string;
  lang: string;
}

const { title, description = "Mugixor - Sustainable mobility solutions for students, young professionals and workers across Europe", lang } = Astro.props;

// Import translations
import { t } from '../i18n/index.js';

// Get current URL for canonical and hreflang
const currentUrl = Astro.url;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);

// Generate hreflang URLs
const languages = ['es', 'eu', 'fr', 'en', 'nl', 'de'];
const hreflangs = languages.map(l => ({
  lang: l,
  url: new URL(Astro.url.pathname.replace(`/${lang}/`, `/${l}/`), Astro.site)
}));

// Schema.org structured data
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Mugixor",
  "description": "European sustainable mobility startup from Basque Country",
  "url": "https://cholloberri.eus",
  "logo": "https://cholloberri.eus/images/mugixor-logo.png",
  "foundingLocation": {
    "@type": "Place",
    "name": "Basque Country, Spain"
  },
  "areaServed": [
    {
